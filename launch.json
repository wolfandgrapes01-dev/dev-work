{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask (Python)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${fileDirname}/..",  
            "env": {
                "FLASK_APP": "${fileDirname}/../flask_app/app.py",
                "FLASK_ENV": "development"
            },
            "args": ["run"],
            "console": "integratedTerminal"
        },
        {
            "name": "Attach C++ to Python",
            "type": "cppvsdbg",
            "request": "attach",
            "processName": "python.exe",
            "symbolSearchPath": "${fileDirname}/../cpp_module/build",
            "sourceFileMap": {
                "${fileDirname}/../cpp_module/build": "${fileDirname}/../cpp_module/src"
            }
        }
    ],
    "compounds": [
        {
            "name": "Python + C++ (dual debug)",
            "configurations": [
                "Flask (Python)",
                "Attach C++ to Python"
            ]
        }
    ]
}